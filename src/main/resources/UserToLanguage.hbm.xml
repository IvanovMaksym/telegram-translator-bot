<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="max.telegram.db.UserToLanguage" table="USER_ID_LANGUAGE">
        <meta attribute="class-description">
            This class contains the User detail.
        </meta>
        <id name="recordId" type="integer" column="RECORD_ID">
            <generator class="increment"/>
        </id>
        <property name="language" column="LANGUAGE" type="string"/>
        <property name="userId" column="USER_ID" type="integer"/>
        <property name="active" column="ACTIVE" type="integer"/>
    </class>
</hibernate-mapping>